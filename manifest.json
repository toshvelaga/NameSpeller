{
    "manifest_version": 2,
  
    "name": "Name Speller",
    "description": "Chrome Extension. Never misspell your client's name again",
    "version": "0.0.1",
    "content_scripts": [
      {
        "matches": [
          "https://mail.google.com/*", 
          "https://inbox.google.com/*"
        ],
        "js": ["inboxsdk.js", "myapp.js"],
        "run_at": "document_end"
      }
    ],
    "browser_action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
    },
    "icons": {
      "16": "letterS.png"
    },
    "permissions": [
      "storage",
      "https://mail.google.com/",
      "https://inbox.google.com/"]
  }
  